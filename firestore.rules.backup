rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        : null;
    }

    function isMemberOfCommunity(communityId) {
      let userData = getUserData();
      return userData != null && (
        userData.communityId == communityId || 
        (userData.communities != null && communityId in userData.communities)
      );
    }

    function isAdminOfCommunity(communityId) {
      let userData = getUserData();
      return userData != null &&
             userData.role in ['super_admin', 'community_admin'] &&
             isMemberOfCommunity(communityId);
    }

    function isSuperAdminOrCommunityAdmin() {
      let userData = getUserData();
      return userData != null && userData.role in ['super_admin', 'community_admin'];
    }

    // Communities collection - public read to browse, admin create
    match /communities/{communityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isSuperAdminOrCommunityAdmin();
      allow update, delete: if isAuthenticated() && 
                               (resource.data.adminId == request.auth.uid || 
                                (getUserData() != null && getUserData().role == 'super_admin'));
    }

    // Join Requests collection
    match /join_requests/{requestId} {
      allow create: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/communities/$(request.resource.data.communityId)) &&
                     request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && 
                   (request.auth.uid == resource.data.userId || 
                    isSuperAdminOrCommunityAdmin());
      allow update, delete: if isAuthenticated() && isSuperAdminOrCommunityAdmin();
    }

    // Requests collection - CRITICAL: Only visible within same community
    match /requests/{requestId} {
      // Read: Must be member of the same community OR owner of the request
      allow read: if isAuthenticated() && 
                    (isMemberOfCommunity(resource.data.communityId) || 
                     resource.data.createdByUid == request.auth.uid);
      
      // Create: Must be member and set communityId to your community
      allow create: if isAuthenticated() && 
                     request.resource.data.createdByUid == request.auth.uid &&
                     isMemberOfCommunity(request.resource.data.communityId) &&
                     getUserData() != null &&
                     request.resource.data.communityId == getUserData().communityId;
      
      // Update: Must be member of community and either owner, volunteer, or admin
      allow update: if isAuthenticated() && 
                     isMemberOfCommunity(resource.data.communityId) &&
                     (isOwner(resource.data.createdByUid) || 
                      request.auth.uid == resource.data.claimedByUid ||
                      isAdminOfCommunity(resource.data.communityId));
      
      // Delete: Only owner or admin can delete
      allow delete: if isAuthenticated() && 
                     isMemberOfCommunity(resource.data.communityId) &&
                     (isOwner(resource.data.createdByUid) || 
                      isAdminOfCommunity(resource.data.communityId));
    }

    // User profiles - users can read own, admins can read community members
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                    (isOwner(userId) || 
                     isSuperAdminOrCommunityAdmin());
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && 
                      (isOwner(userId) || 
                       isSuperAdminOrCommunityAdmin());
      allow delete: if isAuthenticated() && getUserData() != null && getUserData().role == 'super_admin';
    }

    // Messages collection - only between members of same community
    match /messages/{messageId} {
      allow read: if isAuthenticated() && 
                    (resource.data.senderId == request.auth.uid || 
                     resource.data.recipientId == request.auth.uid);
      allow create: if isAuthenticated() && 
                     request.resource.data.senderId == request.auth.uid;
    }

    // Gamification profiles
    match /gamification/{userId} {
      allow read: if isAuthenticated() && 
                    (isOwner(userId) || isMemberOfCommunity(resource.data.communityId));
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Activity Logs (Admin only)
    match /activity_logs/{logId} {
      allow read: if isAuthenticated() && 
                    isSuperAdminOrCommunityAdmin() &&
                    isMemberOfCommunity(resource.data.communityId);
      allow write: if isAuthenticated();
    }

    // Admin Logs (Admin actions tracking)
    match /admin_logs/{logId} {
      allow read: if isAuthenticated() && isSuperAdminOrCommunityAdmin();
      allow write: if isAuthenticated() && isSuperAdminOrCommunityAdmin();
    }

    // Audit Logs (Super Admin only)
    match /audit_logs/{logId} {
      allow read: if isAuthenticated() && getUserData() != null && getUserData().role == 'super_admin';
      allow write: if false;
    }
  }
}
